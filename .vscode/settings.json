{
    "search.exclude": {
        "**/.nuxt": true
    },
    "editor.tabSize": 4,
    "eslint.options": {
        "extensions": [ //List of file extensions to activate eslint
            ".html",
            ".js",
            ".vue",
            ".ts"
        ]
    },
    "eslint.validate": ["html", "vue", "javascript", "typescript"],
    // Run the linter on save (onSave) or on type (onType)
    "eslint.run": "onSave",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }
}